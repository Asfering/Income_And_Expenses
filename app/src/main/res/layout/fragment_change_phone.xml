<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePhoneFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(+7)"
        android:layout_marginStart="20dp"
        android:layout_marginTop="270dp"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(+7)"
        android:layout_marginStart="20dp"
        android:layout_marginTop="320dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/changePhoneOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Старый номер"
        android:inputType="number" />

    <EditText
        android:id="@+id/changePhoneNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="310dp"
        android:ems="10"
        android:hint="Новый номер"
        android:inputType="number"
        android:text="" />



    <EditText
        android:id="@+id/writePasswordOnChangePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Пароль"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/btnChangePhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="410dp"
        android:text="Сохранить" />



</FrameLayout>